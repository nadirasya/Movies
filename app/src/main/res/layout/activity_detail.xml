<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_data_received"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                tools:src="@tools:sample/avatars"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_title_received"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/data_received"
            android:textSize="32sp"
            style="@style/TextPrimary"/>

        <TextView
            android:id="@+id/rating"
            android:text="@string/rating"
            style="@style/TextSubTitle"/>

        <TextView
            android:id="@+id/tv_rating_received"
            android:text="@string/data_received"
            style="@style/TextSecondary"/>

        <TextView
            android:id="@+id/description"
            android:text="@string/description"
            style="@style/TextSubTitle"/>

        <TextView
            android:id="@+id/tv_desc_received"
            android:text="@string/data_received"
            style="@style/TextSecondary"/>

        <TextView
            android:id="@+id/critic"
            android:text="@string/critic"
            style="@style/TextSubTitle"/>

        <TextView
            android:id="@+id/tv_critic_received"
            android:text="@string/data_received"
            style="@style/TextSecondary"/>

        <Button
            android:id="@+id/btn_view_open_link"
            android:text="@string/view_open_link"
            style="@style/Button"/>

    </LinearLayout>
</ScrollView>